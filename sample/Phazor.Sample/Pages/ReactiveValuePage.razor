@page "/ReactiveValue"
@attribute [PhazorSample("PhazorReactiveValue")]
@using System.Reactive.Subjects
@using Phazor.Sample.Tools

<button onclick="@OnClick">Increment</button>

<PhazorReactiveValue Value="_subject" Context="value">
    Value = @value
</PhazorReactiveValue>

@code {

    private readonly Subject<int> _subject = new Subject<int>();

    private int _value;

    private void OnClick()
    {
        _subject.OnNext(++_value);
    }

}