@if (Condition is not null)
{
    <PhazorReactiveValue Value="Condition">
        @if (context)
        {
            @True
        }
        else
        {
            @False
        }
    </PhazorReactiveValue>
}

@code {
    
    [Parameter]
    public IObservable<bool>? Condition { get; set; }

    [Parameter]
    public RenderFragment? True { get; set; }
    
    [Parameter]
    public RenderFragment? False { get; set; }
    
}